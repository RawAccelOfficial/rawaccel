<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:userinterface.Views.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="userinterface.Views.Controls.LocalizedComboBox">

	<ComboBox x:Name="InternalComboBox">
		<ComboBox.ItemTemplate>
			<DataTemplate DataType="local:LocalizedComboItem">
				<TextBlock Text="{Binding LocalizedText}" />
			</DataTemplate>
		</ComboBox.ItemTemplate>
	</ComboBox>

</UserControl>