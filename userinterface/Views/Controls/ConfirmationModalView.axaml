<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="userinterface.Views.Controls.ConfirmationModalView"
             x:Name="Root">
	<Grid RowDefinitions="Auto,*,Auto" Margin="20">
		<TextBlock Grid.Row="0" Text="{Binding #Root.Title}" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
		<TextBlock Grid.Row="1" Text="{Binding #Root.Message}" TextWrapping="Wrap" VerticalAlignment="Center"/>
		<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,20,0,0">
			<Button Content="{Binding #Root.CancelText}" Click="OnCancelClick" MinWidth="80"/>
			<Button Content="{Binding #Root.ConfirmText}" Click="OnConfirmClick" MinWidth="80" Classes="accent"/>
		</StackPanel>
	</Grid>
</UserControl>