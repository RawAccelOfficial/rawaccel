<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:userinterface.ViewModels.Profile"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="100"
             x:Class="userinterface.Views.Profile.ProfileListElementView"
             x:DataType="vm:ProfileListElementViewModel"
             ClipToBounds="False">

    <Rectangle x:Name="AnimatedElement"
              Fill="Red"
              Height="50"
              Width="400"
              VerticalAlignment="Top"
              HorizontalAlignment="Left">
        <Rectangle.RenderTransform>
            <TranslateTransform Y="0"/>
        </Rectangle.RenderTransform>
    </Rectangle>
</UserControl>