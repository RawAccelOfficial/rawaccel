<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:userinterface.ViewModels.Profile"
             xmlns:ext="using:userinterface.Extensions"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="userinterface.Views.Profile.ProfileListView"
             x:DataType="vm:ProfileListViewModel">

	<StackPanel Orientation="Vertical">
		<!-- Add Profile Button -->
		<Button Classes="NavButton" 
		        Content="Add Profile" 
		        Click="OnAddProfileClicked"
		        Margin="8,4,8,8"/>
		        
		<!-- Profile Items Container -->
		<Panel x:Name="ProfileContainer" 
		       Background="Transparent"
		       MinHeight="100">
		</Panel>
	</StackPanel>
</UserControl>