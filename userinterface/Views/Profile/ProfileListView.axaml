<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:userinterface.ViewModels.Profile"
             xmlns:ext="using:userinterface.Extensions"
             xmlns:local="using:userinterface.Views.Profile"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="userinterface.Views.Profile.ProfileListView"
             x:DataType="vm:ProfileListViewModel">


	<StackPanel>
		<!-- Test button -->
		<Button Content="Test" Command="{Binding TestCommand}" Margin="10"/>
		
		<!-- Canvas for animated profile elements -->
		<Canvas x:Name="ProfileCanvas" 
		        Background="LightGray"
		        Height="{Binding CanvasHeight}"
		        ClipToBounds="False">
			<!-- Profile List Element -->
			<local:ProfileListElementView Canvas.Left="0" Canvas.Top="0" Width="400" Height="100" VerticalAlignment="Top"/>
		</Canvas>
	</StackPanel>
</UserControl>