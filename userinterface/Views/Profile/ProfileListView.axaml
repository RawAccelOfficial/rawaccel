<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:userinterface.ViewModels.Profile"
             xmlns:ext="using:userinterface.Extensions"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="userinterface.Views.Profile.ProfileListView"
             x:DataType="vm:ProfileListViewModel">


	<StackPanel>
		<!-- Test button -->
		<Button Content="Test" Command="{Binding TestCommand}" Margin="10"/>
		
		<!-- Canvas for animated profile elements -->
		<Canvas x:Name="ProfileCanvas" 
		        Background="LightGray"
		        Height="{Binding CanvasHeight}"
		        ClipToBounds="False">
			<!-- Animated Rectangle -->
			<Rectangle x:Name="AnimatedRectangle"
			          Fill="Red"
			          Width="400"
			          Height="50"
			          Canvas.Left="0"
			          Canvas.Top="0">
				<Rectangle.RenderTransform>
					<TranslateTransform Y="0"/>
				</Rectangle.RenderTransform>
			</Rectangle>
		</Canvas>
	</StackPanel>
</UserControl>