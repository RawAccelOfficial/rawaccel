<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:userinterface.ViewModels.Profile"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
			 xmlns:ext="using:userinterface.Extensions"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="userinterface.Views.Profile.ProfileChartView"
             x:DataType="vm:ProfileChartViewModel">
	<UserControl.Styles>
		<Style Selector="lvc|CartesianChart">
			<Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}"/>
			<Setter Property="Margin" Value="8"/>
		</Style>
		<Style Selector="Button.chart-control">
			<Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="CornerRadius" Value="4"/>
			<Setter Property="Width" Value="32"/>
			<Setter Property="Height" Value="32"/>
			<Setter Property="Padding" Value="4"/>
			<Setter Property="Margin" Value="4"/>
			<Setter Property="Opacity" Value="0.8"/>
		</Style>
		<Style Selector="Button.chart-control:pointerover">
			<Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
			<Setter Property="Opacity" Value="1"/>
		</Style>
		
		<!-- Animations for smooth transitions -->
		<Style Selector="Image.preview-image">
			<Setter Property="Transitions">
				<Transitions>
					<DoubleTransition Property="Opacity" Duration="0:0:0.3"/>
				</Transitions>
			</Setter>
		</Style>
		
		<Style Selector="lvc|CartesianChart.interactive-chart">
			<Setter Property="Transitions">
				<Transitions>
					<DoubleTransition Property="Opacity" Duration="0:0:0.5"/>
				</Transitions>
			</Setter>
		</Style>
	</UserControl.Styles>
	<Border Background="{DynamicResource HoverBackgroundBrush}"
	        BorderBrush="{DynamicResource BorderBrush}"
	        BorderThickness="1"
	        CornerRadius="8">
		<Grid>
			<!-- Static Preview Image (shown first for fast loading) -->
			<Image x:Name="PreviewImage"
			       Classes="preview-image"
			       Source="{Binding PreviewImageSource}"
			       IsVisible="{Binding IsPreviewMode}"
			       Stretch="Uniform"
			       StretchDirection="Both"
			       HorizontalAlignment="Stretch"
			       VerticalAlignment="Stretch"/>
			
			<!-- Loading indicator -->
			<Grid IsVisible="{Binding IsLoadingChart}" 
			      Background="#80000000"
			      HorizontalAlignment="Stretch"
			      VerticalAlignment="Stretch">
				<StackPanel Orientation="Vertical" 
				           HorizontalAlignment="Center" 
				           VerticalAlignment="Center">
					<TextBlock Text="Loading interactive chart..." 
					          Foreground="White" 
					          FontSize="12" 
					          HorizontalAlignment="Center"/>
				</StackPanel>
			</Grid>
			
			<!-- Interactive Chart (shown after loading) -->
			<lvc:CartesianChart x:Name="Chart"
			                    Classes="interactive-chart"
			                    SyncContext="{Binding Sync}"
			                    Series="{Binding Series}"
			                    XAxes="{Binding XAxes}"
			                    YAxes="{Binding YAxes}"
			                    TooltipPosition="Top"
			                    TooltipTextPaint="{Binding TooltipTextPaint}"
			                    TooltipBackgroundPaint="{Binding TooltipBackgroundPaint}"
			                    TooltipTextSize="12"
			                    AutoUpdateEnabled="True"
			                    IsVisible="{Binding IsInteractiveMode}"
			                    Opacity="{Binding ChartOpacity}"/>
			
			<!-- Chart Controls -->
			<StackPanel Orientation="Horizontal"
			            HorizontalAlignment="Right"
			            VerticalAlignment="Bottom"
			            Margin="16,16,16,2"
			            IsVisible="{Binding IsInteractiveMode}">
				<Button Classes="chart-control"
				        Command="{Binding RecreateAxesCommand}"
				        ToolTip.Tip="{ext:Localized ProfileResetZoom}">
					<PathIcon Data="{StaticResource screenshot_regular}"/>
				</Button>
				<Button Classes="chart-control"
				        Command="{Binding FitToDataCommand}"
				        ToolTip.Tip="{ext:Localized ProfileFitToData}">
					<PathIcon Data="{StaticResource full_screen_zoom_regular}"/>
				</Button>
			</StackPanel>
		</Grid>
	</Border>
</UserControl>
