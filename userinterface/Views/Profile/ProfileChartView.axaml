<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:userinterface.ViewModels.Profile"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
			 xmlns:ext="using:userinterface.Extensions"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="userinterface.Views.Profile.ProfileChartView"
             x:DataType="vm:ProfileChartViewModel">
	<UserControl.Styles>
		<Style Selector="lvc|CartesianChart">
			<Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}"/>
			<Setter Property="Margin" Value="8"/>
		</Style>
		<Style Selector="Button.chart-control">
			<Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="CornerRadius" Value="4"/>
			<Setter Property="Width" Value="32"/>
			<Setter Property="Height" Value="32"/>
			<Setter Property="Padding" Value="4"/>
			<Setter Property="Margin" Value="4"/>
			<Setter Property="Opacity" Value="0.8"/>
		</Style>
		<Style Selector="Button.chart-control:pointerover">
			<Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
			<Setter Property="Opacity" Value="1"/>
		</Style>
		
		<!-- Animations for smooth transitions -->
		<Style Selector="lvc|CartesianChart.interactive-chart">
			<Setter Property="Transitions">
				<Transitions>
					<DoubleTransition Property="Opacity" Duration="0:0:0.5"/>
				</Transitions>
			</Setter>
		</Style>
	</UserControl.Styles>
	<Border Background="{DynamicResource HoverBackgroundBrush}"
	        BorderBrush="{DynamicResource BorderBrush}"
	        BorderThickness="1"
	        CornerRadius="8">
		<Grid>
			<!-- Skeleton Loader (shown while chart is initializing) -->
			<Grid IsVisible="{Binding IsLoadingChart}"
			      Background="{DynamicResource ControlBackgroundBrush}"
			      HorizontalAlignment="Stretch"
			      VerticalAlignment="Stretch">
				
				<!-- Chart outline -->
				<Border BorderBrush="{DynamicResource BorderBrush}" 
				        BorderThickness="1" 
				        CornerRadius="4"
				        Margin="20"
				        Opacity="0.3">
					
					<!-- Loading dots -->
					<StackPanel Orientation="Horizontal" 
					           HorizontalAlignment="Center" 
					           VerticalAlignment="Center">
						<Ellipse Width="8" Height="8" 
						        Fill="{DynamicResource AccentBrush}" 
						        Margin="2" 
						        Opacity="0.7"/>
						<Ellipse Width="8" Height="8" 
						        Fill="{DynamicResource AccentBrush}" 
						        Margin="2" 
						        Opacity="0.5"/>
						<Ellipse Width="8" Height="8" 
						        Fill="{DynamicResource AccentBrush}" 
						        Margin="2" 
						        Opacity="0.3"/>
					</StackPanel>
				</Border>
			</Grid>
			
			
			<!-- Interactive Chart (shown after loading) -->
			<lvc:CartesianChart x:Name="Chart"
			                    Classes="interactive-chart"
			                    SyncContext="{Binding Sync}"
			                    Series="{Binding Series}"
			                    XAxes="{Binding XAxes}"
			                    YAxes="{Binding YAxes}"
			                    TooltipPosition="Top"
			                    TooltipTextPaint="{Binding TooltipTextPaint}"
			                    TooltipBackgroundPaint="{Binding TooltipBackgroundPaint}"
			                    TooltipTextSize="12"
			                    AutoUpdateEnabled="True"
			                    IsVisible="{Binding IsInteractiveMode}"
			                    Opacity="{Binding ChartOpacity}"/>
			
			<!-- Chart Controls -->
			<StackPanel Orientation="Horizontal"
			            HorizontalAlignment="Right"
			            VerticalAlignment="Bottom"
			            Margin="16,16,16,2"
			            IsVisible="{Binding IsInteractiveMode}">
				<Button Classes="chart-control"
				        Command="{Binding RecreateAxesCommand}"
				        ToolTip.Tip="{ext:Localized ProfileResetZoom}">
					<PathIcon Data="{StaticResource screenshot_regular}"/>
				</Button>
				<Button Classes="chart-control"
				        Command="{Binding FitToDataCommand}"
				        ToolTip.Tip="{ext:Localized ProfileFitToData}">
					<PathIcon Data="{StaticResource full_screen_zoom_regular}"/>
				</Button>
			</StackPanel>
		</Grid>
	</Border>
</UserControl>
