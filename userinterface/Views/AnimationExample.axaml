<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="userinterface.Views.AnimationExample">
    <Grid>
        <Canvas Name="AnimationCanvas" Background="LightGray" Width="400" Height="300">
            <Border Name="RedBox" 
                    Width="50" 
                    Height="50" 
                    Background="Red" 
                    Canvas.Left="50" 
                    Canvas.Top="50" />
        </Canvas>
        
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10">
            <Button Name="MoveToPositionAButton" Content="Move to A" Margin="5" />
            <Button Name="MoveToPositionBButton" Content="Move to B" Margin="5" />
        </StackPanel>
    </Grid>
</UserControl>