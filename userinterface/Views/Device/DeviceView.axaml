<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:userinterface.ViewModels.Device"
             xmlns:controls="using:userinterface.Controls"
             mc:Ignorable="d"
             d:DesignWidth="800"
             x:Class="userinterface.Views.Device.DeviceView"
             x:DataType="vm:DeviceViewModel">

	<UserControl.Styles>
		<Style Selector="Button.DeleteButton">
			<Setter Property="Background" Value="{DynamicResource DangerButtonBrush}" />
			<Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
			<Setter Property="BorderThickness" Value="0" />
			<Setter Property="CornerRadius" Value="6" />
			<Setter Property="Padding" Value="8" />
			<Setter Property="Cursor" Value="Hand" />
			<Setter Property="Transitions">
				<Transitions>
					<BrushTransition Property="Background" Duration="0:0:0.2"/>
					<TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.15"/>
				</Transitions>
			</Setter>
		</Style>

		<Style Selector="Button.DeleteButton:pointerover">
			<Setter Property="Background" Value="{DynamicResource DangerButtonBrush}" />
			<Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
			<Setter Property="RenderTransform" Value="scale(1.05)" />
		</Style>

		<Style Selector="Button.DeleteButton:pressed">
			<Setter Property="Background" Value="{DynamicResource DangerButtonBrush}" />
			<Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
			<Setter Property="RenderTransform" Value="scale(0.95)" />
		</Style>

		<Style Selector="Button.DeleteButton:focus">
			<Setter Property="Background" Value="{DynamicResource DangerButtonBrush}" />
			<Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
		</Style>

		<Style Selector="Button.DeleteButton:disabled">
			<Setter Property="Background" Value="{DynamicResource DisabledButtonBrush}" />
			<Setter Property="Cursor" Value="Arrow" />
			<Setter Property="Opacity" Value="0.5" />
		</Style>

		<Style Selector="Button.DeleteButton:disabled PathIcon">
			<Setter Property="Foreground" Value="{DynamicResource DisabledTextBrush}" />
		</Style>

		<Style Selector="controls|EditableExpanderView">
			<Setter Property="Margin" Value="0,0,0,8" />
			<Setter Property="Transitions">
				<Transitions>
					<TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2"/>
					<DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
				</Transitions>
			</Setter>
		</Style>

		<Style Selector="controls|EditableExpanderView.DisabledExpander">
			<Setter Property="Opacity" Value="0.8" />
		</Style>

		<Style Selector="controls|EditableExpanderView:pointerover">
			<Setter Property="RenderTransform" Value="scale(1.01)" />
		</Style>
	</UserControl.Styles>

	<controls:EditableExpanderView HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch"
                                   IsExpanded="False"
                                   IsExpanderEnabled="{Binding IsExpanderEnabled}"
                                   Classes.DisabledExpander="{Binding !IsExpanderEnabled}">
		<controls:EditableExpanderView.Header>
			<Grid ColumnDefinitions="2*,*,*,2*,Auto"
                  HorizontalAlignment="Stretch"
                  Background="Transparent"
                  Margin="8,4">
				<ContentControl Grid.Column="0"
                                HorizontalAlignment="Left"
                                Content="{Binding NameField}"
                                IsEnabled="{Binding IsExpanderEnabled}" />

				<ContentControl Grid.Column="1"
                                HorizontalAlignment="Left"
                                Content="{Binding DPIField}"
                                IsEnabled="{Binding IsExpanderEnabled}" />

				<ContentControl Grid.Column="2"
                                HorizontalAlignment="Left"
                                Content="{Binding IgnoreBool}" />

				<ContentControl Grid.Column="3"
                                HorizontalAlignment="Left"
                                Content="{Binding DeviceGroup}"
                                IsEnabled="{Binding IsExpanderEnabled}" />

				<Button Grid.Column="4"
                        Classes="DeleteButton"
                        Command="{Binding DeleteCommand}"
                        Margin="8,0,0,0"
                        IsEnabled="{Binding !IsDefaultDevice}">
					<PathIcon Data="{StaticResource delete_regular}" Width="16" Height="16" />
				</Button>
			</Grid>
		</controls:EditableExpanderView.Header>

		<controls:EditableExpanderView.ExpanderContent>
			<Grid ColumnDefinitions="*,*"
                  HorizontalAlignment="Stretch"
                  Margin="26,8,8,8">
				<ContentControl Grid.Column="0"
                                HorizontalAlignment="Stretch"
                                Content="{Binding HWIDField}"
                                Margin="0,0,16,0" />

				<ContentControl Grid.Column="1"
                                HorizontalAlignment="Left"
                                Content="{Binding PollRateField}" />
			</Grid>
		</controls:EditableExpanderView.ExpanderContent>
	</controls:EditableExpanderView>
</UserControl>