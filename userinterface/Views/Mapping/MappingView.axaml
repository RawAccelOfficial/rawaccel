<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:userinterface.ViewModels.Mapping"
             xmlns:mapping="using:userinterface.Views.Mapping"
             mc:Ignorable="d" d:DesignWidth="800"
             x:Class="userinterface.Views.Mapping.MappingView"
             x:DataType="vm:MappingViewModel">

	<UserControl.Styles>
		<Style Selector="ListBox">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Padding" Value="0"/>
			<Setter Property="SelectionMode" Value="Single"/>
		</Style>

		<Style Selector="ListBoxItem">
			<Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
			<Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
			<Setter Property="Margin" Value="12,3"/>
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="FontWeight" Value="Medium"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
			<Setter Property="CornerRadius" Value="6"/>
			<Setter Property="Padding" Value="16,12"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="Transitions">
				<Transitions>
					<BrushTransition Property="Background" Duration="0:0:0.2"/>
					<BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
				</Transitions>
			</Setter>
			<Setter Property="Template">
				<ControlTemplate>
					<Border Name="PART_LayoutRoot"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="{TemplateBinding Padding}">
						<ContentPresenter Name="PART_ContentPresenter"
                                          Content="{TemplateBinding Content}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                          Foreground="{TemplateBinding Foreground}"
                                          Background="Transparent"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
					</Border>
				</ControlTemplate>
			</Setter>
		</Style>

		<Style Selector="ListBoxItem ContentPresenter">
			<Setter Property="Background" Value="Transparent"/>
		</Style>
		<Style Selector="ListBoxItem:selected ContentPresenter">
			<Setter Property="Background" Value="Transparent"/>
		</Style>
		<Style Selector="ListBoxItem:pointerover ContentPresenter">
			<Setter Property="Background" Value="Transparent"/>
		</Style>

		<Style Selector="ListBoxItem:pointerover">
			<Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource FocusBorderBrush}"/>
			<Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
		</Style>

		<Style Selector="ListBoxItem:selected">
			<Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
			<Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource SecondaryHighlightBrush}"/>
		</Style>

		<Style Selector="ListBoxItem:selected:pointerover">
			<Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource SecondaryHighlightHoverBrush}"/>
		</Style>

		<Style Selector="ListBoxItem:pressed">
			<Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource FocusBorderBrush}"/>
		</Style>

		<Style Selector="FlyoutPresenter">
			<Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
		</Style>

		<Style Selector="Flyout ListBox">
			<Setter Property="MaxHeight" Value="300"/>
			<Setter Property="Padding" Value="8"/>
		</Style>

		<Style Selector="TextBlock.MappingTitle">
			<Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
			<Setter Property="FontSize" Value="25"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="Margin" Value="8,0,0,0"/>
		</Style>

		<Style Selector="TextBlock">
			<Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
			<Setter Property="FontSize" Value="14"/>
		</Style>

		<Style Selector="Button.DeleteButton">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Padding" Value="4"/>
			<Setter Property="Margin" Value="4,0,0,0"/>
			<Setter Property="CornerRadius" Value="4"/>
			<Setter Property="Width" Value="24"/>
			<Setter Property="Height" Value="24"/>
			<Setter Property="Cursor" Value="Hand"/>
		</Style>

		<Style Selector="Button.DeleteButton:pointerover">
			<Setter Property="Background" Value="{DynamicResource DangerButtonHoverBrush}"/>
		</Style>

		<Style Selector="Button.DeleteButton PathIcon">
			<Setter Property="Foreground" Value="{DynamicResource DangerButtonBrush}"/>
		</Style>

		<Style Selector="Button.DeleteButton:pointerover PathIcon">
			<Setter Property="Foreground" Value="{DynamicResource ButtonIconOnHoverBrush}"/>
		</Style>

		<Style Selector="Button.DeleteButton:disabled">
			<Setter Property="Background" Value="{DynamicResource DisabledButtonBrush}"/>
			<Setter Property="Cursor" Value="Arrow"/>
			<Setter Property="Opacity" Value="0.5"/>
		</Style>

		<Style Selector="Button.DeleteButton:disabled PathIcon">
			<Setter Property="Foreground" Value="{DynamicResource DisabledTextBrush}"/>
		</Style>

		<Style Selector="Button.AddButton">
			<Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
			<Setter Property="Foreground" Value="{DynamicResource AccentForegroundBrush}"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Padding" Value="8,6"/>
			<Setter Property="Margin" Value="8,4"/>
			<Setter Property="CornerRadius" Value="6"/>
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="FontWeight" Value="Medium"/>
			<Setter Property="Cursor" Value="Hand"/>
		</Style>

		<Style Selector="Button.AddButton:pointerover">
			<Setter Property="Background" Value="{DynamicResource AccentHoverBrush}"/>
		</Style>

		<Style Selector="Button.AddButton:disabled">
			<Setter Property="Background" Value="{DynamicResource DisabledBackgroundBrush}"/>
			<Setter Property="Foreground" Value="{DynamicResource DisabledForegroundBrush}"/>
			<Setter Property="Cursor" Value="Arrow"/>
		</Style>

		<Style Selector="ComboBox">
			<Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}"/>
			<Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="CornerRadius" Value="4"/>
			<Setter Property="Padding" Value="8"/>
		</Style>

		<Style Selector="ComboBox:focus">
			<Setter Property="BorderBrush" Value="{DynamicResource PrimaryButtonBrush}"/>
		</Style>

		<Style Selector="ComboBox:pointerover">
			<Setter Property="BorderBrush" Value="{DynamicResource PrimaryButtonBrush}"/>
			<Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
		</Style>

		<Style Selector="Button.ActivationButton">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Padding" Value="4"/>
			<Setter Property="Width" Value="20"/>
			<Setter Property="Height" Value="20"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="CornerRadius" Value="10"/>
		</Style>

		<Style Selector="Button.ActivationButton:pointerover">
			<Setter Property="Background" Value="#22C55E33"/>
		</Style>

		<Style Selector="Ellipse.ActiveIndicator">
			<Setter Property="Width" Value="12"/>
			<Setter Property="Height" Value="12"/>
		</Style>

		<Style Selector="Ellipse.ActiveIndicator.Active">
			<Setter Property="Fill" Value="#22C55E"/>
			<Setter Property="Stroke" Value="#22C55E"/>
			<Setter Property="StrokeThickness" Value="2"/>
		</Style>

		<Style Selector="Ellipse.ActiveIndicator.Inactive">
			<Setter Property="Fill" Value="Transparent"/>
			<Setter Property="Stroke" Value="#6B7280"/>
			<Setter Property="StrokeThickness" Value="2"/>
		</Style>

		<Style Selector="Ellipse.ActiveIndicator.Inactive:pointerover">
			<Setter Property="Stroke" Value="#22C55E"/>
		</Style>
	</UserControl.Styles>

	<Grid>
		<Button Classes="ActivationButton"
				HorizontalAlignment="Right"
				VerticalAlignment="Top"
				Margin="0,8,8,0"
				ZIndex="1"
				Command="{Binding ActivateCommand}">
			<Ellipse Classes="ActiveIndicator"
					 Name="ActivationIndicator"/>
		</Button>

		<DockPanel>
			<Grid DockPanel.Dock="Top"
                  ColumnDefinitions="Auto,*"
                  Margin="0,0,0,12">
				<Button Grid.Column="0"
                        Classes="DeleteButton"
                        Command="{Binding DeleteCommand}"
                        VerticalAlignment="Center"
                        IsEnabled="{Binding !IsActiveMapping}">
					<PathIcon Data="{StaticResource delete_regular}" Width="16" Height="16"/>
				</Button>
				<TextBlock Grid.Column="1"
                           Classes="MappingTitle"
                           Text="{Binding MappingBE.Name.CurrentValidatedValue}"
                           VerticalAlignment="Center"/>
			</Grid>

			<Button DockPanel.Dock="Bottom"
                    Classes="AddButton"
                    HorizontalAlignment="Stretch"
                    Name="AddEntryButton"
                    IsEnabled="{Binding HasDeviceGroupsToAdd}">
				<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
					<PathIcon Data="{StaticResource text_bullet_list_add_regular}"
                              Width="16" Height="16"
                              Margin="0,0,8,0"/>
					<TextBlock Text="Add Entry"/>
				</StackPanel>
				<Button.Flyout>
					<Flyout Placement="Bottom">
						<ListBox Name="DeviceGroupSelectorToAddMapping"
                                 SelectionChanged="AddMappingSelectionChanged"
                                 ItemsSource="{Binding MappingBE.DeviceGroupsStillUnmapped}"
                                 Width="280">
							<ListBox.ItemTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding CurrentValidatedValue}"/>
								</DataTemplate>
							</ListBox.ItemTemplate>
						</ListBox>
					</Flyout>
				</Button.Flyout>
			</Button>

			<ListBox ItemsSource="{Binding MappingListElements}">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<mapping:MappingListElementView/>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</DockPanel>
	</Grid>
</UserControl>